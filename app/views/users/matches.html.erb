<section>
  <div class="space">
    <h1 align="center" style="font-size:100px; margin-bottom:50px;"><%= @user.pet_name %>'s Matches</h1>
    <div class="container">
      <% @user.get_matches.each do |match| %>
        <% match.pet_pic.each do |pic| %>
          <div class="row" style="margin-bottom:80px;">
            <div class="col-md-6">
              <img class="img-fluid rounded-circle" src="<%= url_for(pic.variant(resize: "500x500")) %>" alt="">
            </div>
            <div class="col-md-6">
              <h2 class="display-4" style="line-height:6em"><%= link_to "View #{match.pet_name}'s Profile", user_path(match), class:"btn btn-primary btn-xl rounded-pill mt-5" %></h2>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
