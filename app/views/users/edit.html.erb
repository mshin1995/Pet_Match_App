<div class="space">
  <header class="text-center">
    <div class="masthead-content">
      <div class="container">

        <!-- SHOWS ERRORS -->
        <% if @user.errors.any? %>
          <div class="text-danger">
            <%= pluralize(@user.errors.count, "error") %> prohibited these updates from being saved:<br>
            <% @user.errors.full_messages.each do |msg| %>
              <%= msg %><br>
            <% end %>
          </div><br>
        <% end %>

        <!-- NEW USER FORM -->

        <h1>Edit your Profile</h1><br>

        <%= form_for @user do |f| %>
          <h4 class="masthead-subheading mb-0"><%= f.label :username %></h4>
            <%= f.text_field :username %><br><br>

          <h4 class="masthead-subheading mb-0"><%= f.label :password %></h4>
            <%= f.password_field :password %><br><br>

          <h4 class="masthead-subheading mb-0"><%= f.label :password_confirmation %></h4>
            <%= f.password_field :password_confirmation %><br><br>

          <h4 class="masthead-subheading mb-0"><%= f.label :email %></h4>
            <%= f.text_field :email %><br><br>

          <h4 class="masthead-subheading mb-0"><%= f.label :location %></h4>
            <%= f.text_field :location %><br><br>

          <h4 class="masthead-subheading mb-0"><%= f.label :pet_pic %></h4>
            <%= f.file_field :pet_pic, multiple: true %><br><br>

          <h4 class="masthead-subheading mb-0"><%= f.label :pet_name %></h4>
            <%= f.text_field :pet_name %><br><br>

          <h4 class="masthead-subheading mb-0"><%= f.label :pet_age %></h4>
            <%= f.number_field :pet_age %><br><br>

          <h4 class="masthead-subheading mb-0"><%= f.label :pet_bio %></h4>
            <%= f.text_area :pet_bio %><br>

          <%= f.submit "Update Profile", class: "btn btn-primary btn-lg rounded-pill mt-5" %><br>
          <%= link_to "Delete Profile", "/users/#{@user.id}/delete", class: "btn btn-primary btn-lg rounded-pill mt-5" %>
        <% end %>

      </div>
    </div>
  </header>
  <footer class="space"></footer>
</div>
